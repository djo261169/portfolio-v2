@using v2.Models
@model IEnumerable<v2.Models.Project>

@{
    ViewBag.Title = "Home Page";
}
    <header>
        <div class="anim-hover-bounce-in">
            <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
                <source src="~/Media/Free%20Video%20Loop%20-%20Motion%20Background%20-%20Water%20Motion%20Graphic.mp4" type="video/mp4" />
            </video>
            <div class="container h-100">
                <div class="d-flex h-100 text-center align-items-center">
                    <div class="w-100 text-white">
                        <h2 class="display-3">Portfolio hardverskih rešenja</h2>
                        <p class="lead mb-0"> Arduino, Raspberry Pi, Internet Of Things</p>
                    </div>
                </div>
            </div>
        </div>
    </header>

        <div class="row-fluid">
            <p class="text-center">@Html.ActionLink("Dodaj svoj projekat u portfolio", "Index", "Projects")</p>
        </div>
        <div class="row-fluid">
            <div>
                @using (var ctx = new ProjectDBContext())
                {
                    foreach (var project in ctx.Projects)
                    {
                    <a href="@Url.Action("Details", "Projects", new { @id=project.ProjectID})">
                        <div class="container anim-hover-grow">
                            <div class="row" style="padding: 3%;">
                                <div class="col-md-8">
                                    <div class="row"><h3 class="text-info">@project.Title</h3></div>
                                    <div class="row"><h5 class="text-body">@project.Story</h5></div>
                                </div>
                                <div class="col-md-4 ">
                                    <img alt="@project.Title" src="/Content/@Url.Content(project.URL)" class="img-thumbnail" />
                                </div>
                            </div>
                        </div>
</a>
                    }
                }
            </div>
        </div>
        <div id="divimage" class="modal">
            <img class="modal-content" id="modalimg">
            <div id="caption"></div>
        </div>
